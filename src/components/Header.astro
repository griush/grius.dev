---
const navItems = [
    {
        title: "Projects",
        label: "projects",
        url: "/grius.dev/#projects",
    },
    {
        title: "Tech Stack",
        label: "skills",
        url: "/grius.dev/#skills",
    },
    {
        title: "About me",
        label: "about-me",
        url: "/grius.dev/#about-me",
    },
    {
        title: "Contact",
        label: "contact",
        url: "/grius.dev/#contact",
    },
];
---

<header class="mt-5">
    <nav class="flex flex-row justify-center items-center mx-auto">
        {
            navItems.map((link) => (
                <>
                    <a
                        href={link.url}
                        aria-label={link.label}
                        class="group text-primary font-semibold mx-3 transition duration-300 hover:text-secondary sm:text-base text-xs"
                    >
                        {link.title}
                        <span class="block max-w-0 group-hover:max-w-full transition-all duration-300 h-0.5 bg-secondary" />
                    </a>
                </>
            ))
        }
    </nav>
</header>
