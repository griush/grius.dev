---
import GithubIcon from "./icons/Github.astro";
import LinkedInIcon from "./icons/Linkedin.astro";

const navItems = [
  {
    title: "Experience",
    label: "experience",
    url: "/#experience",
  },
  {
    title: "Projects",
    label: "projects",
    url: "/#projects",
  },
  {
    title: "Tech Stack",
    label: "skills",
    url: "/#skills",
  },
  {
    title: "About me",
    label: "about-me",
    url: "/#about-me",
  },
  {
    title: "Contact",
    label: "contact",
    url: "/#contact",
  },
];
---

<section
  class="flex flex-col h-screen m-auto items-start justify-center w-full lg:max-w-4xl md:max-w-2xl sm:max-w-lg max-w-xs animate-fade-in"
>
  <h1 class="text-primary uppercase font-bold text-center sm:text-8xl text-7xl">
    Gerard Rius
  </h1>
  <h2
    class="text-secondary uppercase font-semibold text-center sm:text-6xl text-4xl"
  >
    Software Developer
  </h2>

  <div class="flex my-4">
    <a
      href="http://github.com/griush/"
      target="_blank"
      rel="noopener noreferrer"
      class="mr-1"
    >
      <GithubIcon
        class="size-9 text-primary hover:text-gray-400 transition-all duration-100 hover:scale-110"
      />
    </a>
    <a
      href="https://www.linkedin.com/in/griush/"
      target="_blank"
      rel="noopener noreferrer"
      class="ml-1"
    >
      <LinkedInIcon
        class="size-9 text-primary hover:text-blue-400 transition-all duration-100 hover:scale-110"
      />
    </a>
  </div>

  <p class="font-medium sm:text-xl text-lg [&>strong]:text-secondary">
    Self-taught <strong>software developer</strong>. Currently studying <strong
      >computer science</strong
    > at UPC. From Barcelona, Spain ðŸ‡ªðŸ‡¸.
  </p>

  <br>
  <p class="font-medium sm:text-xl text-lg [&>strong]:text-secondary">Take a <strong>look</strong> at...</p>
  <nav
    class="flex flex-row justify-center items-center rounded-full py-2"
  >
    {
      navItems.map((link) => (
        <>
          <a
            href={link.url}
            aria-label={link.label}
            class="group text-primary font-semibold mr-7 transition duration-150 hover:text-secondary sm:text-base text-xs"
          >
            {link.title}
            <span class="block max-w-0 group-hover:max-w-full transition-all duration-150 h-0.5 bg-secondary" />
          </a>
        </>
      ))
    }
  </nav>
</section>
